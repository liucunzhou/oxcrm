
<!--页面详情-->
<div class="page-content">

    <div class="customer-list">
        <div class="customer-item customer-list-header">
            <div class="cell-checkbox">
                <input type="checkbox" class="check_all" value="{$val['id']}"/>
            </div>
            <div class="cell-customerno">客户编号</div>
            <div class="cell-realname">客户名</div>
            <div class="cell-phone">联系方式</div>
            <div class="cell-phone1">其他联系</div>
            <div class="cell-publisher">发布业务员</div>
            <div class="cell-sale">跟单员</div>
            <div class="cell-news-type">信息类型</div>
            <div class="cell-ordered-staff">成单人</div>
            <div class="cell-change">转婚庆</div>
            <div class="cell-banquet-size">宴会规模</div>
            <div class="cell-budget">预算</div>
            <div class="cell-valid">发布状态</div>
            <div class="cell-remark-amount">备注</div>
            <div class="cell-remark">客户备注</div>
            <div class="cell-wedding-intention">跟进状态</div>
            <div class="cell-wedding-date">婚期</div>
            <div class="cell-zone">区域</div>
            <div class="cell-hotel">咨询酒店</div>
            <div class="cell-source">客户来源</div>
            <div class="cell-createtime">录入时间</div>
        </div>
        <{foreach name="list" item="val"}>
            <div class="customer-item">
                <div class="cell-checkbox">
                    <input type="checkbox" name="id[]" value="{$val['member']['id']}"/>
                </div>
                <div class="cell-customerno">
                    <a class="action-modal" href="javascript:void(0);" data-action="{:url('Customer/editCustomer',['id'=>$val['id']])}">
                        {$val['member']['member_no']}
                    </a>
                </div>
                <div class="cell-realname">{$val['member']['realname']|default='-'}</div>
                <div class="cell-phone">{:substr_replace($val['member']['mobile'],'****', 3, 4)}</div>
                <div class="cell-phone1">
                    <{if empty($val['member']['mobile1'])}>
                        -
                    <{else}>
                        {:substr_replace($val['member']['mobile1'],'****', 3, 4)}
                    <{/if}>
                </div>
                <div class="cell-publisher">{$users[$val['member']['from_id']]['realname']}</div>
                <div class="cell-sale">跟单员</div>
                <div class="cell-news-type">{$newsTypes[$val['member']['news_type']]}</div>
                <div class="cell-ordered-staff">成单人</div>
                <div class="cell-change">转婚庆</div>
                <div class="cell-banquet-size">{$val['member']['banquet_size']}</div>
                <div class="cell-budget">{$val['member']['budget']}</div>
                <div class="cell-valid">{$publishStatus[$val['member']['is_valid']]}</div>
                <div class="cell-remark-amount">备注</div>
                <div class="cell-remark">{$val['member']['remark']}</div>
                <div class="cell-wedding-intention">{$intentions[$val['member']['intention_status']]['title']|default='未跟进'}</div>
                <div class="cell-wedding-date">{$val['member']['wedding_date']}</div>
                <div class="cell-zone">{$val['member']['zone']}</div>
                <div class="cell-hotel">{$hotels[$val['member']['hotel_id']]['title']}</div>
                <div class="cell-source">{$sources[$val['member']['source_id']]['title']}</div>
                <div class="cell-createtime">{$val['member']['create_time']}</div>
            </div>
        <{/foreach}>

</div>


            <!--删除-->
        <!--</a>-->
    <!--</div>-->
</div>
<div class="fixed-bottom">
    <div class="toolbar-bottom pull-left">
        <label class="label-checkbox-bottom">
            <input type="checkbox" class="check_all">
            <span>全选</span>
        </label>

        <a class="btn btn-xs btn-warning action-modal" href="javascript:void(0);" data-action="{:url('Customer/toStore')}">
            申请回访
        </a>

    </div>
    <div class="pull-right">
        <{include file="common/page" /}>
    </div>
</div>
